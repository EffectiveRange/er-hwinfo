{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/EffectiveRange/er-hwinfo/main/resources/hwdb-schema.json",
  "title": "Hardware Database",
  "description": "Schema for hardware description database",
  "type": "object",
  "propertyNames": {
    "description": "Hardware type name",
    "maxLength": 64
  },
  "additionalProperties": {
    "type": "object",
    "description": "Hardware revisions keyed by semantic version string",
    "propertyNames": {
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "maxLength": 32
    },
    "additionalProperties": {
      "type": "object",
      "description": "Hardware revision definition",
      "properties": {
        "pins": {
          "type": "object",
          "description": "Pin definitions for this hardware revision",
          "propertyNames": {
            "description": "Pin name",
            "maxLength": 64
          },
          "additionalProperties": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string",
                "description": "Human-readable description of the pin's purpose",
                "maxLength": 256
              },
              "value": {
                "type": "integer",
                "description": "GPIO pin number",
                "minimum": 0,
                "maximum": 255
              }
            },
            "required": ["description", "value"],
            "additionalProperties": false
          }
        }
      },
      "required": ["pins"],
      "additionalProperties": false
    }
  }
}
